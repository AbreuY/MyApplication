<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/tilt_main_layout" android:background="@color/lib_main_activity_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/tilt_header" android:padding="0.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <FrameLayout android:id="@+id/tilt_view_container" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@+id/tilt_footer" android:layout_below="@+id/tilt_header" />
    <LinearLayout android:orientation="vertical" android:id="@+id/tilt_footer" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_above="@+id/tilt_ok_cancel_container">
        <View android:background="@drawable/upshadow" android:layout_width="fill_parent" android:layout_height="4.0dip" />
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/tilt_button_none" android:background="@drawable/selector_btn_tilt_mode" android:text="@string/tilt_none" android:drawableTop="@drawable/tilt_icon_none" style="@style/effect_footer_imagebutton_style" />
            <Button android:id="@+id/tilt_button_radial" android:background="@drawable/selector_btn_tilt_mode" android:text="@string/tilt_radial" android:drawableTop="@drawable/tilt_icon_radial" style="@style/effect_footer_imagebutton_style" />
            <Button android:id="@+id/tilt_button_linear" android:background="@drawable/selector_btn_tilt_mode" android:text="@string/tilt_linear" android:drawableTop="@drawable/tilt_icon_parallel" style="@style/effect_footer_imagebutton_style" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/tilt_ok_cancel_container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ImageButton android:id="@+id/tilt_cancel" android:src="@drawable/cancel_white" style="@style/effect_footer_imagebutton_style" />
        <Button android:textSize="@dimen/lib_adj_label_text_size" android:background="@color/lib_footer_button_color_normal" android:layout_height="fill_parent" android:text="Tilt Shift" style="@style/effect_footer_imagebutton_style" />"
<ImageButton android:id="@+id/tilt_ok" android:src="@drawable/ok_white" style="@style/effect_footer_imagebutton_style" />
    </LinearLayout>
</RelativeLayout>